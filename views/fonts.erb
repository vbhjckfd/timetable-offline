<%

font_data = [
  './public/fonts/MyriadPro/MyriadPro-Regular.otf',
  './public/fonts/MyriadPro/MyriadPro-Semibold.otf'
  ].map do |path|
  Base64.strict_encode64(File.open(path).read)
end

%>

    @font-face {
      font-family: "MyriadPro-Semibold";
      font-variant: normal;
      font-style: normal;
      font-weight: normal;
      src: url("data:font/truetype;charset=utf-8;base64,<%= font_data[0] %>") format(opentype);
    }
    @font-face {
      font-family: "MyriadPro-Light1";
      font-variant: normal;
      font-weight: 600;
      src: url("data:font/truetype;charset=utf-8;base64,<%= font_data[1] %>") format(opentype);
    }

    .footer .fnt0 {font-weight:600;font-size:416.7px;font-family:'MyriadPro-Semibold'}
    .footer .fnt1 {font-weight:normal;font-size:100.01px;font-family:'MyriadPro-Light1'}
    .footer .fil7 {fill:#2B2A29}
    .footer .fil8 {fill:#E31E24}



